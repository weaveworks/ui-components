    "stylelint-custom-processor-loader": "0.4.0",
    "stylelint-declaration-use-variable": "1.6.1",
    "stylelint-processor-styled-components": "1.3.1",
    "superagent": "^3.6.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
